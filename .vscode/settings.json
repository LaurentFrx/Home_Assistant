{
    // ====== Spécifique Home Assistant ======
    "files.associations": {
        "*.yaml": "home-assistant"
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "files.trimTrailingWhitespace": true
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "yaml.customTags": [
        "!include scalar",
        "!include_dir_merge_list scalar",
        "!secret scalar"
    ],
    "editor.formatOnSave": true,
    "files.eol": "\n",
    "files.encoding": "utf8",
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    // ====== Fichiers exclus ======
    "files.exclude": {
        "**/.git": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    // ====== Configuration Claude Code ======
    // Approbations automatiques des outils fréquemment utilisés
    "claudeCode.toolApprovals": {
        "Read": {
            "patterns": [
                "**/*.yaml",
                "**/*.json",
                "**/*.py"
            ],
            "action": "allow"
        },
        "Glob": {
            "action": "allow"
        },
        "Grep": {
            "action": "allow"
        }
    },
    // ====== Git : un peu moins de frictions ======
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.ignoreUntracked": true,
    "claude-code.useTerminal": false
}